@model KD_Company.Models.CarDetails
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>Update</h1>

<form method="post" action="UpdateCar" enctype="multipart/form-data">
    <div class="form-group">

        <input type="text" class="form-control" name="CarName" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.CarName">

    </div>
    <div class="form-group">

        <input type="text" class="form-control" name="BrandName" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.BrandName">

    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="Type" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Type">

    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="Color" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Color">

    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="Price" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Price">

    </div>
    <div class="form-group">
        <textarea class="form-control" name="Description" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.Description"></textarea>

    </div>
    <input type="hidden" value="@Model.FileName" name="FileName" />


    @*<input type="file" name="FileToUpload" />*@




    <button type="submit" class="btn btn-primary">Submit</button>
</form>