@model IEnumerable<KD_Company.Models.CarDetails>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section coming-soon" data-section="section3">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="right-content">
                    <div class="top-content">
                        <h6> Pls <em>Select a </em>Brand Name To search</h6>
                    </div>
                    <form id="contact" action="Forsearch" method="get">
                        <div class="row">

                            <div class="col-md-12">
                                <fieldset>

                                    <select name="select" class="form-control">
                                        @foreach (var item in Model)
                                        {
                                            <option name="searchtext" type="text" class="form-control" value="@item.BrandName" placeholder="Search">@item.BrandName</option>
                                        }
                                    </select>

                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="button">Search</button>
                                </fieldset>

                            </div>

                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

