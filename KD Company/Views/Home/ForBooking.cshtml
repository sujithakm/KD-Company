@model KD_Company.Models.CarDetails
@{
    ViewData["Title"] = "SingleProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />



<section class="section coming-soon" data-section="section3">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="right-content">
                    <div class="top-content">
                        <h6>Enter Payment Informations</h6>
                    </div>
                    <form id="contact" action="pay" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset>
                                    Name
                                    <input name="Name" type="text" class="form-control" id="name" placeholder="Name">
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    car Name
                                    <input name="Carname" type="text" class="form-control" id="name" value="@Model.BrandName @Model.CarName">
                                    <input type="hidden" value="@Model.Id" name="Carid" />
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    Price
                                    <input name="" type="text" class="form-control" id="name" value="@Model.Price pre day">
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    No of Days
                                    <input name="NoOfDays" type="text" class="form-control" id="name" value="@ViewBag.Number">
                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <fieldset>
                                    Total
                                    <input name="Total" type="text" class="form-control" id="name" value="@ViewBag.Total">
                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="button">Pay</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>